@{
    ViewData["Title"] = "Home";
}

<div class="container">

    <!-- 🚀 HERO -->
    <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center">
        <h1 class="fw-bold text-dark mb-3">
            TaskTracker
        </h1>

        <p class="lead text-secondary mb-4">
            Create projects and manage tasks in one place.
            Simlpe. Fast. Reliable.
        </p>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Project"
               asp-action="Index"
               class="btn btn-primary btn-lg mb-2">
                To projects
            </a>
        }
        else
        {
            <a asp-controller="Account"
               asp-action="Login"
               class="btn btn-primary btn-lg mb-2">
                Login
            </a>
        }

    </div>

    <!-- 📦 FEATURES -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Projects</h5>
                    <p class="text-muted">
                        Create projects and manage tasks in one place.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Tasks</h5>
                    <p class="text-muted">
                        Sign employees for tasks and track progress.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Control</h5>
                    <p class="text-muted">
                        Status. Priority. Control.
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>