@model TaskTracker.Models.Objective

@{
    ViewData["Title"] = "Delete";
}

<h2>Objective Details</h2>

<div>
    <h3>@Model.Title</h3>
    <p><strong>Author:</strong> @Model.Author.FullName</p>
    <p><strong>Comment:</strong> @Model.Comment</p>
    <p><strong>Priority:</strong> @Model.Priority</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<div>
    <h4>Assigned Employee</h4>
    <p>@Model.AssignedEmployee?.FullName</p>
</div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger mt-2" /> |
        <a class="btn btn-outline-secondary mt-2" href="@Url.Action("Details", new { id = Model.Id })">Back to Details</a>
    </form>
</div>
